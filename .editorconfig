root = false

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{rb,js,ts,}]
indent_size = 2

[*.{py,cpp,c,cs,go,rs,sh,fish}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{json,toml}]
indent_size = 2

[*.{ps1,psd1}]
charset = utf-8-bom
end_of_line = crlf
