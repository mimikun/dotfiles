[user]
	{{ if eq .chezmoi.os "linux" -}}
	email = {{ (rbwFields "dotfiles-chezmoi").gitconfig_email.value }}
	{{ else -}}
		{{ if eq .chezmoi.hostname "TanakaPC" -}}
	email = {{ (bitwardenFields "item" "0f17c992-d0fe-4f36-bde8-95d9e2de3a6d").gitconfig_email.value }}
		{{ else -}}
	email = {{ (bitwardenFields "item" "ec557677-82d9-4a61-a4f6-aed300cfb34f").gitconfig_email.value }}
		{{ end -}}
	{{ end -}}
	name = Yuto Tanaka
[core]
	autocrlf = false
	ignorecase = false
	editor = nvim
	quotepath = false
	excludesfile = ~/.gitignore_global
	pager = delta
	{{ if eq .chezmoi.os "windows" -}}
	filemode = false
	{{ end }}
[color]
	ui = true
[credential]
	{{ if eq .chezmoi.os "windows" -}}
	helper = manager
	{{ else -}}
	helper = cache --timeout=475200
	{{ end }}
[alias]
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
	ls = "ls-files"
	graph = "log --graph"
	file-diff = "diff --name-only"
	amecomi = "commit --amend --no-edit"
	cleanfetch = "fetch --all --prune --tags --prune-tags"
[init]
	defaultBranch = master
	templatedir = ~/.git-templates/git-secrets
[tag]
	sort = -version:refname
[commit]
	verbose = true
{{ if eq .chezmoi.os "windows" -}}
[winUpdater]
	recentlySeenVersion = 2.25.0.windows.1
[credential "helperselector"]
	selected = manager
{{ end -}}
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Monokai Extended
	navigate = true
	light = false
[interactive]
	diffFilter = delta --color-only

